{
  "compilerOptions": {
    "target": "ES2020",                          // JavaScript target version
    "module": "CommonJS",                        // Module code generation
    "lib": ["ES2020"],                           // Library files to include
    "allowJs": true,                             // Allow JavaScript files to be compiled
    "checkJs": false,                            // Disable type checking for .js files
    "outDir": "./dist",                          // Output directory for compiled files
    "rootDir": "./src",                          // Root directory of input files
    "removeComments": true,                      // Remove comments from output
    "strict": true,                              // Enable all strict type-checking options
    "moduleResolution": "node",                  // Module resolution strategy
    "esModuleInterop": true,                     // Enable interoperability between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true,    // Consistent casing in file names
    "resolveJsonModule": true,                   // Allow importing JSON files
    "paths": {                                   // Path mapping
      "@/*": ["./src/*"]
    },
    "sourceMap": true,                           // Generate source maps
    "inlineSources": true,                       // Include source code in source maps
    "experimentalDecorators": true,              // Enable decorators
    "typeRoots": ["./node_modules/@types"],      // Type definitions directory
    "types": ["node"],                           // Node.js type definitions
    "skipLibCheck": true                         // Skip type checking for declaration files
  },
  "include": [
    "src/**/*.ts"                                // Include all TypeScript files in src directory
  ],
  "exclude": [
    "node_modules",                              // Exclude node_modules directory
    "**/*.test.ts",                              // Exclude test files
    "dist"                                       // Exclude dist directory
  ]
}
